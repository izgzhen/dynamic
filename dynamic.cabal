category:            Language
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

executable dynamic
  main-is:             Main.hs
  other-modules:       AST
                       Core.Flow
                       Interpret
                       Model
                       Parser
                       Common
                       Core.Abstract
                       Core.Coercion
                       APrim
                       Primitive
                       Primitive.Bool
                       Primitive.Number
                       Primitive.Undefined
                       Primitive.Null
                       Primitive.String

  -- other-modules:
  default-extensions:  FlexibleInstances
                       MultiParamTypeClasses
                       FlexibleContexts
                       RankNTypes
                       ScopedTypeVariables

  build-depends:       base >=4.9 && <4.10, containers, lens, mtl,
                       language-ecmascript, js-bridge
  hs-source-dirs:      src
  default-language:    Haskell2010
  ghc-options:         -Wall
